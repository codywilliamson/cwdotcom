---
const today = new Date();
import { Image } from "astro:assets";
import logo from "../assets/svgs/logo.svg";
import github from "../assets/svgs/github.svg";
import linkedin from "../assets/svgs/linkedin.svg";
import email from "../assets/svgs/email.svg";
---

<footer
	class="bg-custom-black text-custom-white flex justify-between items-center p-4 border-t-2 border-t-gray-800"
>
	<div class="flex items-center">
		<!-- Your logo on the left -->
		<Image src={logo} alt="Cody's Logo" width="75" height="75" />
	</div>
	<div class="text-center">
		<span class="ml-2 text-sm">
			&copy; {today.getFullYear()} <span class="text-custom-green">Cody Williamson</span>. 
			<br>
			All rights reserved.
		</span>
	</div>
	<div class="flex items-center space-x-4">
		<a
			href="https://github.com/codywilliamson"
			target="_blank"
			rel="noopener noreferrer"
		>
			<Image src={github} alt="GitHub" width="20" height="30" />
		</a>
		<a
			href="https://linkedin.com/in/codywilliamson"
			target="_blank"
			rel="noopener noreferrer"
		>
			<Image src={linkedin} alt="LinkedIn" width="20" height="30" />
		</a>
		<a href="mailto:cody@spectaclewebdesign.com">
			<Image src={email} alt="Email" width="20" height="30" />
		</a>
	</div>
</footer>
